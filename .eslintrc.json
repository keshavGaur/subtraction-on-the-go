{
    "extends": [
        "airbnb-base"
    ],
    "env": {
        "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8
    },
    "plugins": [
        "smells"
    ],
    "rules": {
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "__set__",
                    "__get__",
                    "__proto__"
                ]
            }
        ],
        "linebreak-style": [],
        "camelcase": [
            "off"
        ],
        "id-match": [
            "error",
            "^[a-zA-Z_]+$"
        ],
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "no-unused-vars": [
            2,
            {
                "argsIgnorePattern": "next|res|req|reject|resolve"
            }
        ],
        "no-console": [
            "off"
        ],
        "new-cap": [
            "error",
            {
                "capIsNewExceptions": [
                    "Map",
                    "List"
                ],
                "properties": false
            }
        ],
        "smells/no-complex-switch-case": 1,
        "smells/no-setinterval": 1,
        "smells/no-switch": 1,
        "smells/no-this-assign": 1,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "asyncArrow": "always",
                "named": "never"
            }
        ],  "require-jsdoc": [
            "error",
            {
                "require": {
                    "ClassDeclaration": true,
                    "FunctionDeclaration": true,
                    "MethodDefinition": true
                }
            }
        ],
         "valid-jsdoc": [
            "error",
            {
                "matchDescription": ".+",
                "prefer": {
                    "arg": "param",
                    "argument": "param",
                    "return": "returns"
                },
                "preferType": {
                    "array": "Array",
                    "boolean": "Boolean",
                    "number": "Number",
                    "object": "Object",
                    "string": "String"
                }
            }
        ]
    }
}
